{
  "$schema": "https://raw.githubusercontent.com/simeg/urlsup/main/schema.json",
  "description": "Lenient configuration for development and CI environments with high tolerance",
  "timeout": 30,
  "retry": 3,
  "retry_delay": 1500,
  "concurrency": 25,
  "rate_limit": 100,
  "allow_timeout": true,
  "allow_status": [200, 201, 202, 204, 301, 302, 303, 307, 308, 429, 503],
  "allowlist": [
    "github.com",
    "*.github.com",
    "githubusercontent.com",
    "*.githubusercontent.com",
    "stackoverflow.com",
    "*.stackoverflow.com",
    "stackexchange.com",
    "*.stackexchange.com",
    "npmjs.com",
    "*.npmjs.com",
    "pypi.org",
    "*.pypi.org",
    "crates.io",
    "*.crates.io",
    "maven.org",
    "*.maven.org",
    "docker.com",
    "*.docker.com",
    "hub.docker.com"
  ],
  "exclude_patterns": [
    "localhost",
    "127\\.0\\.0\\.1",
    "\\.local",
    "staging\\.",
    "dev\\.",
    "test\\.",
    "mock\\.",
    "example\\.com",
    "placeholder\\.",
    "todo\\.",
    "fixme\\.",
    "tbd\\.",
    "coming-?soon",
    "under-?construction"
  ],
  "user_agent": "lenient-url-checker/1.0 (+https://github.com/your-org/your-repo)",
  "include": ["md", "rst", "txt", "html", "json", "yaml", "yml"],
  "exclude": [
    "node_modules/",
    ".git/",
    "build/",
    "dist/",
    "coverage/",
    "logs/",
    "tmp/",
    "temp/",
    ".cache/",
    ".vscode/",
    ".idea/",
    "__pycache__/",
    ".pytest_cache/",
    "vendor/"
  ],
  "failure_threshold": 15
}